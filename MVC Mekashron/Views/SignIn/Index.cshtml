@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Sign In";
}


<div class="col-5 align-center  ">
    <div class="card p-3">
        <form method="post">
            <div class="form-group">
                <label for="formGroupExampleInput">Username:</label>
                <input type="text" class="form-control" name="username" placeholder="Type username...">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Password:</label>
                <input type="text" class="form-control" name="password" placeholder="Type password...">
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </form>

        <div class="mt-2">
            @if (ViewData["ResponseData"] != null)
            {
                <h5>Response:</h5>
                <pre>@Html.Raw(ViewData["ResponseData"] as JObject)</pre>
            }

        </div>

    </div>

</div>